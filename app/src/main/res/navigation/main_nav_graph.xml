<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mutualmobile.praxis.ui.fragments.home.HomeFragment"
        android:label="Praxis" >
        <action
            android:id="@+id/action_homeFragment_to_aboutDialog"
            app:destination="@id/aboutDialog" />
        <action
            android:id="@+id/action_homeFragment_to_jokeFragment"
            app:destination="@id/jokeFragment" />
    </fragment>
    <dialog
        android:id="@+id/aboutDialog"
        android:name="com.mutualmobile.praxis.ui.fragments.about.AboutDialogFragment"
        android:label="Praxis" />
    <fragment
        android:id="@+id/jokeFragment"
        android:name="com.mutualmobile.praxis.ui.fragments.joke.JokeFragment"
        android:label="Praxis" >
        <argument
            android:name="jokes"
            app:argType="string"
            />
    </fragment>
</navigation>